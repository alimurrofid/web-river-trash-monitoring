    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "mqtt": "^5.13.0",
    "mysql2": "^3.14.1",
    "node-cron": "^4.0.6"
  }
