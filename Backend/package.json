    "@types/express-mysql-session": "^3.0.3",
    "@types/express-session": "^1.17.10",
    "@types/node": "^22.15.32",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.31.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
