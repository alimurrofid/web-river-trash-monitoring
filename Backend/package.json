{
  "name": "backend",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/src/main.js",
    "dev": "tsx watch src/main.ts",
    "push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "mysql -u root -p -e \"DROP DATABASE IF EXISTS skripsi;\"",
    "db:create": "mysql -u root -p -e \"CREATE DATABASE skripsi;\"",
    "db:seed": "tsx src/drizzle/seed.ts",
    "migrate:fresh": "rm -rf src/drizzle/migrations/* && npm run db:generate && npm run db:drop && npm run db:create && npm run db:migrate"
  },
